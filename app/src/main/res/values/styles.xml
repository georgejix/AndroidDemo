<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- test Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 窗口背景颜色 -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <!-- 关闭 RecyclerView NestedScrollView ViewPager 水波纹效果 -->
        <item name="android:overScrollMode">never</item>
        <item name="android:windowAnimationStyle">@style/FeedAnimTheme</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- 透明主题 -->
    <style name="Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/FeedAnimTheme</item>
    </style>

    <!-- test透明主题 -->
    <style name="Transparent2" parent="@style/Base.Theme.AppCompat">
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 淡入淡出效果 -->
    <style name="FeedAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_fade_out</item>
    </style>

    <!-- 通用textview样式 -->
    <style name="generalTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 日期选择 -->
    <declare-styleable name="ChooseDate">
        <attr name="mainTextColor" format="color"/>
        <attr name="hightlightTextColor" format="color"/>
        <attr name="mainBgColor" format="color"/>
        <attr name="hightlightBgColor" format="color"/>
        <attr name="mainTextSize" format="dimension"/>
        <attr name="perLineHeight" format="dimension"/>
    </declare-styleable>

    <style name="animation_in_and_out" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

</resources>