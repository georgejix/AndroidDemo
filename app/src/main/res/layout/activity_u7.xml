<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:my_app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/generalTv"
        android:text="bitmap传入drawable，画笔画圆" />

    <ImageView
        android:id="@+id/img01"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        style="@style/generalTv"
        android:text="圓角矩形clippath" />

    <com.jx.androiddemo.testactivity.ui.u7.RoundLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:orientation="vertical"
        my_app:roundLayoutRadius="10dp">

        <ImageView
            android:id="@+id/img02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic4" />

    </com.jx.androiddemo.testactivity.ui.u7.RoundLayout>

    <TextView
        style="@style/generalTv"
        android:text="drawable转为bitmap，画笔画圆" />

    <com.jx.androiddemo.testactivity.ui.u7.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/pic3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_u7_img_bg"
        android:elevation="4dp"
        android:orientation="vertical" />

    <TextView
        style="@style/generalTv"
        android:text="clear边角方式的圆角布局" />

    <com.jx.androiddemo.testactivity.ui.u7.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            app:layout_radius="10dp">

        </LinearLayout>
    </com.jx.androiddemo.testactivity.ui.u7.RoundRelativeLayout>
</LinearLayout>
