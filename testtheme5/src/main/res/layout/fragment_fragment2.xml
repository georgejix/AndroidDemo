<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="gVM"
            type="com.jx.testtheme.GlobalViewModel" />

        <variable
            name="vm"
            type="com.jx.testtheme.ViewModelF1" />
    </data>

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{gVM.mThemeDay == gVM.mTheme ? @color/color_fff : @color/color_000}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@={vm.mStr}"
            android:textColor="@{gVM.mThemeDay == gVM.mTheme ? @color/color_000 : @color/color_fff}" />
    </LinearLayout>
</layout>